{
  "compilerOptions": {
    "target": "es2015",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "examples",
  ],
  "typedocOptions": {
    "mode": "library",
    "inputFiles": "index.ts",
    "out": "docs",
    "exclude": [
      "**/*.test.ts",
      "examples",
      "node_modules/**/*"
    ]
  }
}
