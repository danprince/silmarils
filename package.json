{
  "name": "silmarils",
  "description": "Utilities for building 2d games",
  "version": "0.5.0",
  "main": "index.js",
  "module": "index.js",
  "types": "index.d.ts",
  "repository": "git@github.com:danprince/silmarils.git",
  "author": "danprince <northwalesdan@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf *.js *.d.ts *.d.ts.map",
    "docs": "typedoc --tsconfig tsconfig.build.json --out docs && cp assets/favicon.ico docs && cp -r assets docs",
    "prepublishOnly": "yarn clean && yarn build",
    "postpublish": "yarn clean"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "jest": "^25.3.0",
    "ts-jest": "^25.3.1",
    "typedoc": "^0.17.6",
    "typescript": "^3.8.3"
  },
  "exports": {
    ".": "./index.js",
    "./angle": "./angle.js",
    "./array-2d": "./array-2d.js",
    "./canvas": "./canvas.js",
    "./circle": "./circle.js",
    "./direction": "./direction.js",
    "./keyboard": "./keyboard.js",
    "./line": "./line.js",
    "./mouse": "./mouse.js",
    "./point": "./point.js",
    "./prng": "./prng.js",
    "./rectangle": "./rectangle.js",
    "./rng": "./rng.js",
    "./uid": "./uid.js",
    "./vector": "./vector.js",
    "./easing": "./easing.js"
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "include": [
          "**/*.test.ts"
        ]
      }
    }
  }
}
